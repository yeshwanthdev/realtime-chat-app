{
	"compilerOptions": {
		"jsx": "react-jsx",
		"module": "commonjs",
		"target": "es6",
		"baseUrl": "src",
		"paths": {
			"@root/*": ["*"],
			"@config/*": ["config/*"],
			"@pages/*": ["pages/*"],
			"@components/*": ["components/*"],
			"@store/*": ["store/*"],
			"@services/*": ["services/*"],
			"@hooks/*": ["hooks/*"],
			"@utils/*": ["utils/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	}
}
