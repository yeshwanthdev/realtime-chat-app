{
	"compilerOptions": {
		"jsx": "react-jsx",
		"module": "commonjs",
		"target": "es6",
		"baseUrl": "src",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"@/*": ["./src/*"],
			"@config/*": ["./src/config/*"],
			"@pages/*": ["./src/pages/*"],
			"@components/*": ["./src/components/*"],
			"@services/*": ["./src/services/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@utils/*": ["./src/utils/*"]
		}
	}
}
